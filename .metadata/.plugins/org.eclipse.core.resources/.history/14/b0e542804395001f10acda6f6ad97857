package operadores;

import java.util.Scanner;

public class LogicoDisjuncao {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		 
        boolean idade, mae_presente, resposta;
 
        System.out.println("Let's check cinema access: ");
        System.out.println("Age greater than or equal to 18? ");
        idade = ler.nextBoolean();
 
        System.out.println("Is your mother present? ");
        mae_presente = ler.nextBoolean();
 
        resposta = idade || mae_presente;
        
        System.out.println("Acess " + resposta+ "!");
        
        ler.close();
	}

}
